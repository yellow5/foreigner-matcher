source "http://rubygems.org"

# Specify your gem's dependencies in foreigner-matcher.gemspec
gemspec :path => '../../'

group :test do
  gem "rake"
  gem "rspec",        "~> 2.12.0"
  gem "mocha",        "~> 0.12.0"
  gem "activerecord", "~> 3.0.0"
  gem "railties",     "~> 3.0.0"

  platforms :ruby do
    gem "mysql2",     "~> 0.2.0"
    gem "pg",         "~> 0.14.0"
  end

  platforms :jruby do
    gem "activerecord-jdbcmysql-adapter"
    gem "activerecord-jdbcpostgresql-adapter"
  end
end
